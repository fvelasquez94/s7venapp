                                        {
                                              <img alt="S7VEN" src="~/Content/dist/images/preview-8.jpg">
                                        }
                                        else
                                        {
                                            if (item.T_image.Contains("pdf") || item.T_image.Contains("doc"))
                                            {
                                                  <img alt="S7VEN" src="~/Content/dist/images/preview-8.jpg">
                                            }
                                            else
                                            {
                                                <img src="@Url.Content(item.T_image)" class="img-fluid" alt="S7VEN">
