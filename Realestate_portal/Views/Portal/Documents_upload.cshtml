@model List<Realestate_portal.Models.Tb_Docpackages>
@{
    ViewBag.Title = "Premium Group Realty";
}


<div class="container-fluid">
    <!-- Begin Page Header-->
    <div class="row">
        <div class="page-header">
            <div class="d-flex align-items-center">
                <h2 class="page-header-title"></h2>
                <div>
                    <ul class="breadcrumb">
