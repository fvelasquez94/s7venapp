                            }
                            else
                            {
                          <a class="btn btn-shadow" href="#" data-toggle="modal" data-target="#modalNewwebinar">Add Document Package</a>


                          <a class="btn btn-shadow" href="@Url.Action("Documents_upload_management", "Portal")">Management</a>
                            }
