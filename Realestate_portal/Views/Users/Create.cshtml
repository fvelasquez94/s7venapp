@model Realestate_portal.Models.Sys_Users
@using Realestate_portal.Models
@{
    ViewBag.Title = "New Agent";
    Realestate_portal.Models.Sys_Users activeus = (Realestate_portal.Models.Sys_Users)ViewBag.activeuser;
    List<Sys_Users> leaders = ViewBag.leaders;
}


<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        New Agent User
    </h2>
</div>
<div class="grid grid-cols-12 gap-12 mt-5">
    <div class="intro-y col-span-12 lg:col-span-12">
        <!-- BEGIN: Input -->
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <div class="intro-y box">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-dark-5">
                <h2 class="font-medium text-base mr-auto">
                    Create new account
                </h2>
            </div>
            <div id="input" class="p-5">
                <div class="preview">
                    <div>
                        <label for="Name" class="form-label">Name</label>
                        <input id="Name" name="Name" type="text" class="form-control" placeholder="" required>
                    </div>
                    <div>
                        <label for="LastName" class="form-label">Last Name</label>
                        <input id="LastName" name="LastName" type="text" class="form-control" placeholder="" required>
                    </div>

                    <div class="mt-3">
                        <label for="Email" class="form-label">Email</label>
                        <input id="Email" type="email" name="Email" class="form-control" placeholder="" required>
                        <div class="form-help">User password will autogenerated and send it to this email.</div>
                    </div>
                    <div>
                        <label for="Address" class="form-label">Address</label>
                        <input id="Address" name="Address" type="text" class="form-control" placeholder="">
                    </div>
                    <div class="mt-3">
                        <label for="Main_telephone" class="form-label">Telephone (complete format starting with + , no spaces)</label>
                        <input id="Main_telephone" name="Main_telephone" type="text" class="form-control" placeholder="">
                    </div>
                    <div class="mt-3">
                        <label for="Position" class="form-label">Position</label>
                        <select class="form-control" name="Position" id="Position">
                            <option value="Real Estate Salesperson">Real Estate Salesperson</option>
                            <option value="Team leader">Team leader</option>


                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="Brokerage_name" class="form-label">Brokerage Name</label>
                        <input type="text" class="form-control" id="Brokerage_name" name="Brokerage_name" value="@activeus.Name" readonly />
                    </div>
                    <div class="mt-3">
                        <label for="Brokerage_address" class="form-label">Brokerage Address</label>
                        <input type="text" class="form-control" id="Brokerage_address" name="Brokerage_address" value="@activeus.Brokerage_address" readonly />
                    </div>
                    <div class="mt-3">
                        <label for="Broker_Contact" class="form-label">Broker Contact</label>
                        <input type="text" class="form-control" id="Broker_Contact" name="Broker_Contact" value="@activeus.Broker_Contact" readonly />
                    </div>
                    <div class="mt-3">
                        <label for="Broker_License" class="form-label">Broker License</label>
                        <input type="text" class="form-control" id="Broker_License" name="Broker_License" value="@activeus.Broker_License" readonly />
                    </div>
                    <div class="mt-5">
                        <input type="submit" value="Create new account" id="submitbuttoncreate" class="btn btn-primary" />
                    </div>
                 
                </div>
            </div>
        </div>
        }
        <!-- END: Input -->

 
    </div>
    </div>
