            <div class="d-flex align-items-center">
                <h2 class="page-header-title"></h2>
                <div>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="ti ti-home"></i></a></li>
                        <li class="breadcrumb-item active">SCHEDULER</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Header -->
    <!-- Begin Row -->


    <div class="row">


        <!-- Begin Widget Header -->
        <!-- End Widget Header -->
        <!-- Begin Widget Body -->
        <div class="widget-body" style="width:100%;">
            <div class="widget-header bordered d-flex align-items-center">
                <div class="today">
                    <div class="title"></div>
                    <div class="new-tasks">ALL TEXT TEXT </div>
                </div><h2></h2>
                @if (ViewBag.rol == "SA")
                {

                }
                else
                {
                    <div class="widget-options">
                        <a class="btn btn-shadow" href="#" data-toggle="modal" data-target="#modalNewwebinar">Add Appointment</a>

                    </div>
                }


            </div><br />
            <div class="row">

                <!-- End Events -->
                <div class="col-xl-12">
                    <!-- Begin Widget -->
                    <div class="widget has-shadow">

                        <!-- End Widget Header -->
