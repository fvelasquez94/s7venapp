@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="light">
<!-- BEGIN: Head -->
<head>
    <meta charset="utf-8">
    <link href="dist/images/logo.svg" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="S7VEN Co.">
    <meta name="keywords" content="real estate, agents, web">
    <meta name="author" content="Francisco Velasquez">
    <title>S7VEN</title>
    <!-- BEGIN: CSS Assets-->
    <link rel="stylesheet" href="~/Content/dist/css/app.css" />
    <!-- END: CSS Assets-->
</head>
<!-- END: Head -->
<body class="login">
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Register Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="javascript:void(0)" class="-intro-x flex items-center pt-5">

                    <span class="text-white text-lg ml-3"> S7VEN.CO<span class="font-medium"></span> </span>
                </a>
                <div class="my-auto">

                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                        Welcome to your real
                        <br>
                        estate agent portal
                    </div>

                </div>
            </div>
            <!-- END: Register Info -->
            <!-- BEGIN: Register Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-dark-1 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <img src="~/Content/pgrlogos/S7VENLogoBlack.png" style="width:150px;margin-bottom:50px; margin-left:165px" alt="logo">


                    @if (ViewBag.msg != "")
    {
                <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                    Email successfully sent
                </h2>
                <div class="intro-x mt-2" style="font-size:18px">@ViewBag.msg</div>
                <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
             
                    <a href="@Url.Action("Login","Portal")" class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Back to login</a>
                </div>

}
else
{
using (Html.BeginForm("Reset_pass", "Portal", FormMethod.Post, new { id = "myform" }))
{
                <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                    Forgot your password?
                </h2>
                <div class="intro-x mt-2 text-gray-500 dark:text-gray-500" style="margin-bottom:10px">Enter your email below</div>

                <div class="form-group">

                    <input type="email" class="form-control" placeholder="Email" name="email" id="email" required autofocus>

                </div>
                <div class="input-group clearfix">

                    <p class="text-danger text-small" style="color:red !important;margin-top:20px">@ViewData["msgnotexist"]</p>
                </div>
                <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                    <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">Send</button>
                    <a href="@Url.Action("Login","Portal")" class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Back to login</a>
                </div>




}
}

                </div>
            </div>
            <!-- END: Register Form -->
        </div>
    </div>
    <!-- BEGIN: Dark Mode Switcher-->
    <!-- END: Dark Mode Switcher-->
    <!-- BEGIN: JS Assets-->
    <script src="~/Content/dist/js/app.js"></script>
    <!-- END: JS Assets-->
</body>
</html>
