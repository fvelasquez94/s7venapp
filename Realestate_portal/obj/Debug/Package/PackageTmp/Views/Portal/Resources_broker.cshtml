                        )
                        setTimeout(function () {
                            window.location.reload(true);
                        }, 1000);

                    } else {
                 
                        $("#subbtnenviar").attr("disabled", false);
                        alert(response);
                    }
                },
                error: function (error) {
             
                    $("#subbtnenviar").attr("disabled", false);
                    alert("Error uploading video");
                }
            });
        });

