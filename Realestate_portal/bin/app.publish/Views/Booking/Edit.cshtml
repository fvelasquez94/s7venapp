                    </div>

                    <div class="form-group" style="display:none">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
    <div>
        <a class="btn btn-shadow" href="@Url.Action("Reservations_management", "Portal", new { broker=ViewBag.selbroker})">Back</a>
    </div>

</div>
